{
    "name": "refine-c",
    "displayName": "Refine",
    "description": "Run preprocessor in C/C++ code using GCC",
    "version": "0.0.2",
    "icon": "image/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/dungwinux/refine-c.git"
    },
    "license": "MIT",
    "publisher": "dungwinux",
    "author": "Nguyen Tuan Dung <ntddebugger@gmail.com>",
    "galleryBanner": {
        "color": "#33691e",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.25.0"
    },
    "keywords": [
        "C",
        "C++",
        "Format"
    ],
    "categories": [
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "onCommand:refine-c.refine"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "refine-c.refine",
                "title": "Refine code",
                "icon": "./image/icon.png",
                "category": "Refine",
                "context": {
                    "where": "editor/primary",
                    "when": [
                        "c",
                        "cpp",
                        "objective-c",
                        "objective-cpp"
                    ]
                }
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Refine - configuration",
            "properties": {
                "refine-c.enableLanguages": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [],
                    "description": "A list of languages IDs to enable this extension on (Experimental).\nDon't edit unless you know what you're doing."
                },
                "refine-c.refineLanguage": {
                    "type": "string",
                    "enum": [
                        "none",
                        "c",
                        "c-header",
                        "c++",
                        "c++-header",
                        "objective-c",
                        "objective-c-header",
                        "objective-c++",
                        "objective-c++-header"
                    ],
                    "default": "none",
                    "description": "Specify the language for `gcc`.\nIf 'none' specified, `gcc` will determine and 'refine' your code based on file type.\nMake sure you've installed the proper compiler for the language you choose."
                },
                "refine-c.executable": {
                    "type": "string",
                    "enum": [
                        "clang",
                        "gcc"
                    ],
                    "default": "clang",
                    "description": "Choose executable as refiner"
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "when": "editorLangId == c",
                    "command": "refine-c.refine",
                    "group": "navigation"
                },
                {
                    "when": "editorLangId == cpp",
                    "command": "refine-c.refine",
                    "group": "navigation"
                },
                {
                    "when": "editorLangId == objective-c",
                    "command": "refine-c.refine",
                    "group": "navigation"
                },
                {
                    "when": "editorLangId == objective-cpp",
                    "command": "refine-c.refine",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "shift+alt+r",
                "command": "refine-c.refine",
                "when": "editorTextFocus && !editorReadonly"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "eslint": "^4.11.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.33"
    },
    "dependencies": {}
}
